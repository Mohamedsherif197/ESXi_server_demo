$winrar = Get-WmiObject -Class Win32_Product | Where-Object { $_.Name -like 'WinRAR*' }

if ($winrar) {
    Write-Output "WinRAR is installed."
} else {
    Write-Output "WinRAR is not installed."
}



$winrarInstalled = $false
$winrarPath = (Get-ItemProperty -Path "HKLM:\Software\Microsoft\Windows\CurrentVersion\Uninstall\*").PSChildName | ForEach-Object {
    if ($_ -match "WinRAR") {
        $winrarInstalled = $true
        break
    }
}

if ($winrarInstalled) {
    Write-Output "WinRAR is installed."
} else {
    Write-Output "WinRAR is not installed."
}


$downloadUrl = "https://www.win-rar.com/fileadmin/winrar-versions/winrar/winrar-x64-623.exe"
$installerPath = "$env:TEMP\winrar-x64-6.23.exe"

# Download WinRAR installer
Invoke-WebRequest -Uri $downloadUrl -OutFile $installerPath

# Install WinRAR
Start-Process -FilePath $installerPath -ArgumentList "/S" -Wait

# Clean up the installer file
Remove-Item $installerPath

